@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500");

:root
   font-size: 62.5%

body, html
   width: 100vw
   width: 100%

body
   display flex
   flex-direction: column
   align-items center
   text-align center
   font-family: Roboto;
   font-weight: 400;
   color black
   width: 100%;
   margin: 0;
   font-size: 1.6rem;

.app
   width: 100%
   padding: 20px
   display: flex;
   align-items: center;
   flex-direction: column;

.header
   display: flex
   justify-content: center
   ul
      display: flex
      justify-content: center

.content
   width: 100%
   max-width: 900px
   position: relative
   display: flex
   flex-direction: column
   align-items: center
   .chart, .panel
      margin: 20px auto
      display: block
      width: 100%

.table
   margin-top: 50px


::placeholder
   color: #FFFFFF
   opacity: 0.6